generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String?
  name          String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  roles         UserRole[]
}

model UserRole {
  id        String   @id @default(uuid())
  user_id   String
  role      String   @default("user")
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  created_at DateTime @default(now())

  @@unique([user_id, role])
  @@index([user_id])
}

model Car {
  id            String       @id @default(uuid())
  brand         String
  model         String
  year          Int
  category      String
  categories    String[]     @default([])
  price_per_day Float
  price_per_week Float?
  price_per_month Float?
  unavailable_dates String[] @default([])
  fuel_type     String
  transmission  String
  seats         Int
  image_url     String?
  features      String[]     @default([])
  available     Boolean      @default(true)
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt
  reservations  Reservation[]
  services      ServiceCar[]
}

model Reservation {
  id               String   @id @default(uuid())
  car_id           String
  car              Car      @relation(fields: [car_id], references: [id], onDelete: Cascade)
  customer_name    String
  customer_email   String?
  customer_phone   String?
  pickup_date      DateTime
  return_date      DateTime
  pickup_location  String?
  dropoff_location String?
  child_seat       Boolean  @default(false)
  video_recorder   Boolean  @default(false)
  total_price      Float
  status           String   @default("pending") // pending, confirmed, completed, cancelled
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@index([car_id])
  @@index([status])
}

model Service {
  id            String   @id @default(uuid())
  title_az      String
  title_ru      String?
  title_en      String?
  title_ar      String?
  description_az String
  description_ru String?
  description_en String?
  description_ar String?
  category      String?
  image_url     String?  // JSON array of image URLs
  icon          String?
  features      String?  // JSON: {"az": ["feature1"], "ru": ["feature1"], "en": ["feature1"], "ar": ["feature1"]}
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  cars          ServiceCar[]
}

model ServiceCar {
  service_id String
  car_id     String
  created_at DateTime @default(now())

  service Service @relation(fields: [service_id], references: [id], onDelete: Cascade)
  car     Car     @relation(fields: [car_id], references: [id], onDelete: Cascade)

  @@id([service_id, car_id])
  @@index([car_id])
}

model BlogPost {
  id            String   @id @default(uuid())
  title_az      String
  title_ru      String?
  title_en      String?
  title_ar      String?
  slug          String   @unique
  content_az    String   @db.Text
  content_ru    String?  @db.Text
  content_en    String?  @db.Text
  content_ar    String?  @db.Text
  excerpt_az    String?
  excerpt_ru    String?
  excerpt_en    String?
  excerpt_ar    String?
  image_url     String?
  author        String?
  category      String   @default("blogs")
  published     Boolean  @default(false)
  published_at  DateTime?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@index([slug])
  @@index([published])
}

model Review {
  id            String   @id @default(uuid())
  customer_name String
  customer_location String?
  rating        Int      @default(5) // 1-5
  title_az      String
  title_ru      String?
  title_en      String?
  title_ar      String?
  content_az    String   @db.Text
  content_ru    String?  @db.Text
  content_en    String?  @db.Text
  content_ar    String?  @db.Text
  video_url     String?
  review_type   String   @default("text") // text, video
  verified      Boolean  @default(false)
  featured      Boolean  @default(false)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@index([rating])
  @@index([featured])
  @@index([review_type])
}

model Category {
  id         String   @id @default(uuid())
  slug       String   @unique
  name_az    String
  name_ru    String?
  name_en    String?
  name_ar    String?
  sort_order Int      @default(0)
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model ContactMessage {
  id            String   @id @default(uuid())
  first_name    String
  last_name     String
  email         String
  phone         String?
  subject       String?
  message       String   @db.Text
  status        String   @default("new") // new, read, replied, archived
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@index([status])
  @@index([created_at])
}

model About {
  id            String   @id @default(uuid())
  title_az      String
  title_ru      String?
  title_en      String?
  title_ar      String?
  tagline_az    String?
  tagline_ru    String?
  tagline_en    String?
  tagline_ar    String?
  content_az    String   @db.Text
  content_ru    String?  @db.Text
  content_en    String?  @db.Text
  content_ar    String?  @db.Text
  image_urls    String?  // JSON array of image URLs
  stats         String?  // JSON: [{"icon": "Car", "value": "100+", "label": "Avtomobil"}]
  values        String?  // JSON: [{"title": "Keyfiyyət", "description": "...", "icon": "⭐"}]
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model ContactInfo {
  id                String   @id @default(uuid())
  company_name      String?
  tagline           String?
  description       String?  @db.Text
  phones            String?
  emails            String?
  whatsapp_numbers  String?
  office_hours      String?
  address           String?
  address_secondary String?
  map_embed_url     String?
  social_links      String?
  offices           String?  // JSON array of offices with localized data
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
}

model AgentConfig {
  id                 String   @id @default(uuid())
  agent_name         String
  api_token          String
  instructions       String   @db.Text
  company_name       String
  site_url           String
  agent_endpoint     String?
  project_id         String?
  database_id        String?
  knowledge_base_id  String?
  embedding_model_id String?
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
}

